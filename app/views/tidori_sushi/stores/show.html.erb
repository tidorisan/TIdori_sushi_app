
<div class="content_cover">
	<div class="main_visual"></div>
	<div class='main_box'>
		<div class="left">
			
		</div>
		<div class="right">
			
		</div>
	</div>
</div>

<div>

	<div>
		<%= link_to "メニュー", tidori_sushi_store_menus_path(@store) %>
		<%= link_to "口コミ", tidori_sushi_store_store_buzzs_path(@store) %>
		<%= link_to "クーポン", tidori_sushi_coupons_path %>
		<% if user_signed_in?  %>
			<% if @store.favorited_by?(current_user) %>
				<%=  link_to "お気に入りを外す", tidori_sushi_store_favorites_path(@store), method: :delete, local: true %>
			<% else %>
				<%=  link_to "お気に入りにする", tidori_sushi_store_favorites_path(@store), method: :post, local: true %>
			<% end %>
			<% if current_user.role == :customer %>
				<%= link_to "口コミ投稿", new_tidori_sushi_store_store_buzz_path(@store) %>
			<% end %>
		<% end %>
	</div>
	<div>
		<h1><%= @store.store_name %></h1>
		<p>ジャンル: <%= @store.store_genre.genre_name%></p>
		<p>予算: <%= @store.consumption_budget %> 定休日: <%= @store.regular_holiday %></p>
		<% if @store.news %>
			<p>お店からの大切なお知らせ</p>
			<p><strong><%= @store.news %></strong></p>
		<% end %>
	</div>
</div>

<div>
	<%= attachment_image_tag @store, :image, size: '300x500', fallback: 'no_image.jpg' %>
	<p><%=  @store.comment %></p>
</div>

<div>
	<h2>メニュー</h2>
	<% @store.store_menus.each do |menu| %>
		<div>
			<h3><%= menu.name %></h3>
			<p><%= menu.comment %></p>
			<h3><%= menu.tax_excluded_price %></h3>
		</div>
	<% end %>
	<%= link_to "もっとメニューを見る", tidori_sushi_store_menus_path(@store) %>
</div>

<div>
	<h2>口コミ</h2>
	<% @store.store_buzzs.each do |buzz| %>
		<div>
			<h3><%= buzz.title %></h3>
			<p><%= buzz.detail %></p>
			<h3><%= buzz.tax_excluded_price %></h3>
		</div>
	<% end %>
	<%= link_to "もっと口コミを見る", tidori_sushi_store_store_buzzs_path(@store) %>
</div>

<div>
	<p>左カラム</p>
	<div>

	<div id="map" style="width:30%; height:200px"></div>

		<script type="text/javascript">
		function initMap() {
			var map = new google.maps.Map(document.getElementById('map'), {
		    	center: new google.maps.LatLng(<%= @store.latitude %>, <%= @store.longitude %>),
		        zoom: 15
	    	});
	        (function(){

	          var latlng = new google.maps.LatLng(<%= @store.latitude %>, <%= @store.longitude %>);
	          var marker = new google.maps.Marker({
	              position: latlng,
	              map: map,
	          });
	          var infowindow = new google.maps.InfoWindow({
	          		position: latlng,
	          		content: 'text',
			  });
			  infowindow.open(map);
			  infowindow.close();
	        })();
		}
		</script>

		<script async defer
	      src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['API_KEY']%>&callback=initMap">
	    </script>
	</div>

	<div>
		<p>電話予約: <%= @store.phone_number %></p>
		<p>予算: <%= @store.consumption_budget %></p>
		<p>営業時間: <%= @store.business_day %></p>
		<p>定休日: <%= @store.regular_holiday %></p>
		<p>ホームページ: <%= @store.home_page %></p>
	</div>
</div>
<% content_for :css do %>
  <%= stylesheet_link_tag 'tidori_sushi_store_show' %>
<% end %>

