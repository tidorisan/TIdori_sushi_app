<h1>Users::CreditCards#index</h1>
<p>Find me in app/views/users/credit_cards/index.html.erb</p>


<div>
	<%= form_with(model: @credit_card, url: users_credit_cards_path, local: true) do |f| %>
		<%= f.label :genre_name, '設備ジャンル' %>
		<%= f.text_field :genre_name %>
		<%= f.label :display_status, '有効' %>
		<%= f.radio_button :display_status, :true, checked: true %>

		<%= f.label :display_status, '無効' %>
		<%= f.radio_button :display_status, :false %>
		<%= f.submit "登録" %>
	<% end %>
</div>

<div>
	<table>
		<thead>
			<tr>
				<th>ジャンル</th>
				<th>状態</th>
			</tr>
		</thead>
		<tbody>
			<% @credit_cards.each do |credit_card| %>
				<tr>
					<td><%= credit_card.genre_name %></td>
					<% if credit_card.display_status == true %>
						<td><p>有効</p></td>
					<% else %>
						<td><p>無効</p></td>
					<% end %>
					<td><%= link_to '編集する', edit_users_credit_card_path(credit_card) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
