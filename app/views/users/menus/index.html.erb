<h1>Users::Menus#index</h1>
<p>Find me in app/views/users/menus/index.html.erb</p>

<td><%= link_to "メニュー登録", new_users_store_menu_path(@store_id) %></td>

	<table>
		<caption>メニュー覧画面</caption>
		<thead>
			<tr>
				<th>メニュー名</th>
				<th>表示</th>
			</tr>
		</thead>
		<% @store_menus.each do |store_menu| %>
			<tbody>
				<tr>
					<td><%= store_menu.name %></td>
					<td><%= store_menu.tax_excluded_price %></td>
					<% if store_menu.display_status == true %>
						<td><p>表示</p></td>
					<% else %>
						<td><p>非表示</p></td>
					<% end %>
					<td><%= link_to "編集画面へ", edit_users_store_menu_path(store_menu.store_id, store_menu.id) %></td>
				</tr>
			</tbody>
		<% end %>
	</table>
