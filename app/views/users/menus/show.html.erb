
<div class="box1">
	<h1>メニュー詳細</h1>
</div>
<div class="box">
	<table class="table table-hover table-responsive">
		<caption>メニュー詳細</caption>
		<thead>
			<tr>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>メニュー名</td>
				<td><%= @store_menu.name %></td>
			</tr>
			<tr>
				<td>メニュー説明</td>
				<td><%= @store_menu.comment %></td>
			</tr>
			<tr>
				<td>値段(税抜き)</td>
				<td>¥ <%= @store_menu.tax_excluded_price %></td>
			</tr>
			<tr>
				<td>店舗画像</td>
				<td><%= attachment_image_tag @store_menu, :image, size: '100x100', fallback: 'no_image.jpg'  %></td>
			</tr>
			<tr>
				<td>メニュージャンル</td>
				<td><%= @store_menu.menu_genre.genre_name %></td>
			</tr>
		</tbody>
	</table>
	<div class="botton">
		<%= link_to "一覧に戻る", users_store_menus_path(@store_menu.store_id), class: "button_field btn btn-info botton_content" %>
		<%= link_to "編集する", edit_users_store_menu_path(@store_menu.store_id, @store_menu.id),class: "button_field btn btn-primary botton_content" %>
	</div>

</div>

<% content_for :css do %>
  <%= stylesheet_link_tag 'user_menu_show' %>
<% end %>
