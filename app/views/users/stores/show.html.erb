
<div class="box1">
	<h1>レストラン詳細情報</h1>
</div>

<div class="box">

	<table class="table table-hover table-responsive">
		<caption>店舗基本情報</caption>
		<thead>
			<tr>
				<th>店名</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>店名</td>
				<td><%= @store.store_name %></td>
			</tr>
			<tr>
				<td>店名(全角カタカナ)</td>
				<td><%= @store.kana_store_name %></td>
			</tr>
			<tr>
				<td>店舗＿郵便番号</td>
				<td><%= @store.postal_code %></td>
			</tr>
			<tr>
				<td>店舗＿住所</td>
				<td><%= @store.address %></td>
			</tr>
			<tr>
				<td>店舗＿電話番号</td>
				<td><%= @store.phone_number %></td>
			</tr>
			<tr>
				<td>支店名</td>
				<td><%= @store.branch_name %></td>
			</tr>
			<tr>
				<td>支店名</td>
				<td><%= @store.kana_branch_name %></td>
			</tr>
		</tbody>
	</table>


	<table class="table table-hover table-responsive">
		<caption>店舗詳細情報</caption>
		<thead>
			<tr>
				<th>店舗</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>店舗＿ジャンル</td>
				<% if @store.store_genre_id == 1 %>
					<td>寿司</td>
				<% elsif @store.store_genre_id == 2 %>
					<td>回転寿司</td>
				<% else %>
					<td>立ち食い寿司</td>
				<% end %>
			</tr>
			<tr>
				<td>予約</td>
				<td><%= @store.reservation %></td>
			</tr>
			<tr>
				<td>予約時の注意事項</td>
				<td><%= @store.reservation_of_considerations %></td>
			</tr>
			<tr>
				<td>交通手段</td>
				<td><%= @store.traffic_method %></td>
			</tr>
			<tr>
				<td>営業日</td>
				<td><%= @store.business_day %></td>
			</tr>
			<tr>
				<td>定休日</td>
				<td><%= @store.regular_holiday %></td>
			</tr>
		</tbody>
	</table>


	<table class="table table-hover table-responsive">
		<caption>支払い</caption>
		<thead>
			<tr>
				<th>店舗</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>予算</td>
				<td><%= @store.consumption_budget %></td>
			</tr>
			<tr>
				<td>支払い可能カード</td>
				<td><%= @store.credit_card %></td>
			</tr>
			<tr>
				<td>予約時の注意事項</td>
				<td><%= @store.reservation_of_considerations %></td>
			</tr>
			<tr>
				<td>支払い可能電子マネー</td>
				<td><%= @store.e_money %></td>
			</tr>
		</tbody>
	</table>

	<table class="table table-hover table-responsive">
		<caption>空間・設備</caption>
		<thead>
			<tr>
				<th>店舗</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>座敷数</td>
				<td><%= @store.equipment %></td>
			</tr>
			<tr>
				<td>個室</td>
				<% if @store.private_room == true %>
					<td>あり</td>
				<% else %>
					<td>なし</td>
				<% end %>
			</tr>
			<tr>
				<td>駐車場</td>
				<td><%= @store.parking %></td>
			</tr>
			<tr>
				<td>禁煙・喫煙</td>
				<td><%= @store.no_smoking %>
			</tr>
			<tr>
				<td>空間・設備</td>
				<td><%= @store.equipment %></td>
			</tr>
		</tbody>
	</table>

	<table class="table table-hover table-responsive">
		<caption>その他</caption>
		<thead>
			<tr>
				<th>店舗</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>店舗紹介</td>
				<td><%= @store.comment %></td>
			</tr>
			<tr>
				<td>ホームページURL</td>
				<td><%= @store.home_page %></td>
			</tr>
			<tr>
				<td>お知らせしたいこと</td>
				<td><%= @store.news %></td>
			</tr>
			<tr>
				<td>店舗画像</td>
				<td><%= attachment_image_tag @store, :image, size: '100x100', fallback: 'no_image.jpg'  %></td>
			</tr>
		</tbody>
	</table>

	<div class="botton">
		<%= link_to "一覧に戻る", users_stores_path, class: "button_field btn btn-info botton_content" %>
		<%= link_to "編集する", edit_users_store_path(@store),class: "button_field btn btn-primary botton_content" %>
	</div>

</div>

<% content_for :css do %>
  <%= stylesheet_link_tag 'user_stote_show' %>
<% end %>