<h1>Users::Stores#index</h1>
<p>Find me in app/views/users/stores/index.html.erb</p>

<%= link_to "店舗登録", new_users_store_path %>
<table>
	<caption>管理者＿店舗一覧画面</caption>
	<thead>
		<tr>
			<th>店舗画像</th>
			<th>店舗名</th>
			<th>店舗名(カタカナ)</th>
			<th>店舗登録編集画面へ</th>
			<th>店舗非表示ボタン</th>
			<th>メニュー一覧</th>
			<th>クーポン一覧</th>
		</tr>
	</thead>
	<tbody>
		<% @stores.each do |store| %>
			<tr>
				<td><%= attachment_image_tag store, :image, size: '100x100', fallback: 'no_image.jpg' %></td>
				<td><%= store.store_name %></td>
				<td><%= store.kana_store_name %></td>
				<td><%= link_to "編集画面へ", edit_users_store_path(store) %></td>
				<% if store.display_status == true %>
					<td><p>表示</p></td>
				<% else %>
					<td><p>非表示</p></td>
				<% end %>
				<td><%= link_to "メニュー一覧画面へ", users_store_menus_path(store) %></td>
				<td><%= link_to "クーポン覧画面へ", users_store_coupons_path(store) %></td>
			</tr>
		<% end %>
	</tbody>
</table>
