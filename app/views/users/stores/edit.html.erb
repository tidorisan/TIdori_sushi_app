<%= render 'layouts/error_messages', model: @store %>
<h1>Users::Stores#edit</h1>
<p>Find me in app/views/users/stores/edit.html.erb</p>


<%= form_with(model: @store, url: users_store_path, local: true, method: :patch) do |f|  %>

	<table>
		<caption>店舗基本情報</caption>
		<thead>
			<tr>
				<th>店名</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>店名</td>
				<td><%= f.text_field :store_name, required: "true" %></td>
			</tr>
			<tr>
				<td>店名(全角カタカナ)</td>
				<td><%= f.text_field :kana_store_name, required: "true" %></td>
			</tr>
			<tr>
				<td>店舗＿郵便番号</td>
				<td><%= f.text_field :postal_code, required: "true" %></td>
			</tr>
			<tr>
				<td>店舗＿住所</td>
				<td><%= f.text_field :address, required: "true" %></td>
			</tr>
			<tr>
				<td>店舗＿電話番号</td>
				<td><%= f.text_field :phone_number, required: "true" %></td>
			</tr>
			<tr>
				<td>支店名</td>
				<td><%= f.text_field :branch_name, required: "true" %></td>
			</tr>
			<tr>
				<td>支店名</td>
				<td><%= f.text_field :kana_branch_name, required: "true" %></td>
			</tr>
		</tbody>
	</table>


	<table>
		<caption>店舗詳細情報</caption>
		<thead>
			<tr>
				<th>店舗</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>店舗＿ジャンル</td>
				<td><%= f.label :store_genre_id, "寿司" %></td><td><%= f.radio_button :store_genre_id, 1  %></td>
				<td><%= f.label :store_genre_id, "回転寿司" %></td><td><%= f.radio_button :store_genre_id, 2  %></td>
				<td><%= f.label :store_genre_id, "立ち食い寿司" %></td><td><%= f.radio_button :store_genre_id, 3  %></td>
			</tr>
			<tr>
				<td>予約</td>
				<td><%= f.label :reservation, "予約可" %></td><td><%= f.radio_button :reservation, "予約可" %></td>
				<td><%= f.label :reservation, "予約不可" %></td><td><%= f.radio_button :reservation, "予約不可"  %></td>
				<td><%= f.label :reservation, "完全予約制" %></td><td><%= f.radio_button :reservation, "完全予約制" %></td>
			</tr>
			<tr>
				<td>予約時の注意事項</td>
				<td><%= f.text_field :reservation_of_considerations , required: "true"%></td>
			</tr>
			<tr>
				<td>交通手段</td>
				<td><%= f.text_field :traffic_method, required: "true" %></td>
			</tr>
			<tr>
				<td>営業日</td>
				<td><%= f.text_field :business_day, required: "true" %></td>
			</tr>
			<tr>
				<td>定休日</td>
				<td><%= f.text_field :regular_holiday, required: "true" %></td>
			</tr>
		</tbody>
	</table>

	<table>
		<caption>支払い</caption>
		<thead>
			<tr>
				<th>店舗</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>予算</td>
				<td><%= f.text_field :consumption_budget, required: "true" %></td>
			</tr>
			<tr>
				<td>支払い可能カード</td>
				<td><%= f.text_field :credit_card, placeholder: "例 :visa, JCB", required: "true" %></td>
			</tr>
			<tr>
				<td>予約時の注意事項</td>
				<td><%= f.text_field :reservation_of_considerations, required: "true" %></td>
			</tr>
			<tr>
				<td>支払い可能電子マネー</td>
				<td><%= f.text_field :e_money, placeholder: "例 :paypay, Lienpay", required: "true"  %></td>
			</tr>

		</tbody>
	</table>

	<table>
		<caption>空間・設備</caption>
		<thead>
			<tr>
				<th>店舗</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>座敷数</td>
				<td><%= f.text_field :equipment, required: "true" %></td>
			</tr>
			<tr>
				<td>個室</td>
				<td><%= f.label :private_room, "あり" %>
					<%= f.radio_button :private_room, :true %>
				</td>
				<td><%= f.label :private_room, "なし" %>
					<%= f.radio_button :private_room, :false %>
				</td>
			</tr>
			<tr>
				<td>貸し切り</td>
				<td><%= f.label :reserved, "あり" %>
					<%= f.radio_button :reserved, :true %>
				</td>
				<td><%= f.label :reserved, "なし" %>
					<%= f.radio_button :reserved, :false %>
				</td>
			</tr>
			<tr>
				<td>駐車場</td>
				<td><%= f.text_field :parking, required: "true" %></td>
			</tr>
			<tr>
				<td>禁煙・喫煙</td>
				<td><%= f.label :no_smoking, "完全喫煙可" %>
					<%= f.radio_button :no_smoking, "完全喫煙可" %>
				</td>
				<td><%= f.label :no_smoking, "分煙" %>
					<%= f.radio_button :no_smoking, "分煙" %>
				</td>
				<td><%= f.label :no_smoking, "全面禁煙" %>
					<%= f.radio_button :no_smoking, "全面禁煙" %>
				</td>
			</tr>
			<tr>
				<td>空間・設備</td>
				<td><%= f.text_field :equipment, placeholder: "例 :席が広い. 座敷がある", required: "true"  %></td>
			</tr>
		</tbody>
	</table>

	<table>
		<caption>その他</caption>
		<thead>
			<tr>
				<th>店舗</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>店舗紹介文</td>
				<td><%= f.text_field :comment, required: "true" %></td>
			</tr>
			<tr>
				<td>ホームページURL</td>
				<td><%= f.text_field :home_page, required: "true"%></td>
			</tr>
			<tr>
				<td>お知らせしたいこと</td>
				<td><%= f.text_field :news, required: "true" %></td>
			</tr>
			<tr>
				<td>店舗画像</td>
				<td><%= f.attachment_field :image %></td>
			</tr>
		</tbody>
	</table>

	<%= f.submit "店舗登録する" %>

<% end %>
