<h1>Users::StoreEquipments#index</h1>
<p>Find me in app/views/users/store_equipments/index.html.erb</p>

<div>
	<%= form_with(model: @equipment, url: users_store_equipments_path, local: true) do |f| %>
		<%= f.label :genre_name, '設備ジャンル' %>
		<%= f.text_field :genre_name %>
		<%= f.label :display_status, '有効' %>
		<%= f.radio_button :display_status, :true, checked: true %>

		<%= f.label :display_status, '無効' %>
		<%= f.radio_button :display_status, :false %>
		<%= f.submit "登録" %>
	<% end %>
</div>

<div>
	<table>
		<thead>
			<tr>
				<th>ジャンル</th>
				<th>状態</th>
			</tr>
		</thead>
		<tbody>
			<% @equipments.each do |equipment| %>
				<tr>
					<td><%= equipment.genre_name %></td>
					<% if equipment.display_status == true %>
						<td><p>有効</p></td>
					<% else %>
						<td><p>無効</p></td>
					<% end %>
					<td><%= link_to '編集する', edit_users_store_equipment_path(equipment) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>


