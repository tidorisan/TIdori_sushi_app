<h1>Users::Coupons#edit</h1>
<p>Find me in app/views/users/coupons/edit.html.erb</p>


<%= form_with(model: @coupon, url: users_store_coupon_path(@coupon), local: true, method: :patch) do |f| %>

	<table>
		<caption>クーポン編集</caption>
		<thead>
			<tr>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>割引理由</td>
				<td><%= f.text_field :reason %></td>
			</tr>
			<tr>
				<td>割引内容説明</td>
				<td><%= f.text_field :detail %></td>
			</tr>
			<tr>
				<td>イメージ画像</td>
				<td><%= f.attachment_field :image %></td>

			</tr>
			<tr>
				<td>対象</td>
				<td><%= f.text_field :target %></td>
			</tr>
			<tr>
				<td>但書</td>
				<td><%= f.text_field :writing %></td>
			</tr>
			<tr>
				<td>有効期限</td>
				<td><%= f.text_field :expiration_date %></td>
			</tr>
	</table>
	<%= f.submit "変更を保存する" %>

<% end %>