<%= render 'layouts/error_messages', model: @coupon %>
<h1>Users::Coupons#new</h1>
<p>Find me in app/views/users/coupons/new.html.erb</p>


<%= form_with(model: @coupon, url: users_store_coupons_path, local: true) do |f| %>

	<table>
		<caption>クーポン登録</caption>
		<thead>
			<tr>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>割引理由</td>
				<td><%= f.text_field :reason, required: "true", class: "text_field", placeholder: "例) " %></td>
			</tr>
			<tr>
				<td>割引内容説明</td>
				<td><%= f.text_field :detail, required: "true", class: "text_field", placeholder: "例) " %></td>
			</tr>
			<tr>
				<td>イメージ画像</td>
				<td><%= f.attachment_field :image %></td>

			</tr>
			<tr>
				<td>対象</td>
				<td><%= f.text_field :target, required: "true", class: "text_field", placeholder: "例) " %></td>
			</tr>
			<tr>
				<td>但書</td>
				<td><%= f.text_field :writing , required: "true", class: "text_field", placeholder: "例) " %></td>
			</tr>
			<tr>
				<td>有効期限</td>
				<td><%= f.text_field :expiration_date, required: "true", class: "text_field", placeholder: "例) " %></td>
			</tr>
		</tbody>
	</table>
	<%= f.submit "登録する" %>

<% end %>