
<div class="box1">
	<h1>店舗申請確認ページ</h1>
</div>
<div class="confirmation_box">
	<%= link_to "店舗管理者登録画面へ", new_user_registration_path, class: "confirmation_link_content" %>
</div>

<% content_for :css do %>
  <%= stylesheet_link_tag 'user_user_confirmation' %>
<% end %>


<%= render 'layouts/error_messages', model: @user %>
<div class="box1">
	<h1>店舗管理者＿基本情報入力</h1>
</div>
<div class="box">
	<%= form_with(model: @user, url: users_user_path(current_user), local: true, method: :patch) do |f| %>

				<table class="cp_table">
					<thead>
						<tr>
							<div class="icon_tr">
								<th colspan="2", class="caption">管理者基本情報</th>
							</div>
						</tr>
					</thead>
					<tbody>
						<tr>
							<th>氏名(性)<i class="fa fa-check-square"></i></th>
							<td><%= f.text_field :family_name, required: "true", placeholder: "例)　千鳥", class: "text_field" %></td>
						</tr>
						<tr>
							<th>氏名(名)<i class="fa fa-check-square"></i></th>
							<td><%= f.text_field :first_name, required: "true", class: "text_field", placeholder: "例)　太郎"%></td>
						</tr>
						<tr>
							<th>カナ氏名(性)<i class="fa fa-check-square"></i></th>
							<td><%= f.text_field :kana_family_name, required: "true", class: "text_field", placeholder: "例)　チドリ" %></td>
						</tr>
						<tr>
							<th>カナ氏名(名)<i class="fa fa-check-square"></i></th>
							<td><%= f.text_field :kana_first_name, required: "true", class: "text_field", placeholder: "例)　タロウ" %></td>
						</tr>
						<tr>
							<th>生年月日<i class="fa fa-check-square"></i></th>
							<td><%= f.text_field :birthday, required: "true", class: "text_field", placeholder: "例)　19890312" %></td>
						</tr>

					</tbody>
				</table>
		<div class="botton">
			<%= f.submit "登録する", class: "button_content button_field btn btn-primary" %>
		</div>

	<% end %>
</div>
